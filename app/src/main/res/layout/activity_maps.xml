<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <fragment xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.valxp.app.infiniteflightwatcher.app.MapsActivity" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="right|top"
            android:gravity="right|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/toggleMapType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_toggle_type" />
            <TextView
                style="@style/InfoText"
                android:id="@+id/refreshing_data"
                android:text="@string/refreshing_data"
                android:background="@drawable/shadowed_ui_background"
                android:layout_margin="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/nobody_is_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadowed_ui_background"
            android:text="@string/nobody_is_playing"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <com.valxp.app.infiniteflightwatcher.InfoPane xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/info_pane"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:background="@drawable/shadowed_ui_background"
            android:orientation="horizontal"
            android:layout_gravity="bottom|left"
            android:layout_margin="5dp"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/right_pane"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
            <View
                style="@style/vertical_separator"
                />
            <LinearLayout
                android:id="@+id/left_pane"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>

        </com.valxp.app.infiniteflightwatcher.InfoPane>
    </FrameLayout>
    <ExpandableListView
        android:id="@+id/expandableList"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/soon"
        >
    </ExpandableListView>
</android.support.v4.widget.DrawerLayout>


